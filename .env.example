# 环境变量示例文件
# 复制此文件到 .env.development 或 .env.production 并填入实际值

# 数据库连接
POSTGRES_PRISMA_URL=postgresql://user:password@host:port/db
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:port/db
DATABASE_URL=${POSTGRES_PRISMA_URL}

# JWT密钥 (生产环境应使用复杂随机字符串)
JWT_SECRET=your_jwt_secret_key

# GitHub OAuth配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback
FRONTEND_URL=http://localhost:3000

# 前端可访问环境变量
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id
NEXT_PUBLIC_GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback 